<div class="container">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3>Hello, <strong>{{user.firstname}}</strong> <strong>{{user.lastname}}</strong>!</h3>
				<h3>You are in the <strong>{{merchdata.businessname}}</strong> Queue.</h3>
			</div>
			<div class="panel-body">
				<h3>There are {{count}} users in queue.</h3>
				<h3>Your position in queue is {{position}}.</h3>
				<h3>Your average wait time is {{waitTime}}.</h3>
			</div>
			<div class="panel-footer">  
				<form method="post" action="/users/queuemeout">
					<div class="form-group">
					<input type="hidden" class="form-control" name="email" value={{user.username}}>
					<input type="hidden" class="form-control" name="queue" value="{{merchdata.businessUniqueID}}">
					</div>
					<button type="submit" class="btn btn-primary btn-lg">QmeOut</button>
				</form>
			</div>
		</div>
	</div>
</div>
